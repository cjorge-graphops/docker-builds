{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "github>cjorge-graphops/renovate-config"
    ],

    "separateMajorMinor": false,

    "commitBodyTable": true,

    "semanticCommitType": "ci",

    "ignorePaths": [
    ],

    "ignoreDeps": [
    ],

    "enabledManagers": ["regex", "dockerfile"],

    "regexManagers": [
        {
        "fileMatch": ["^Dockerfile$"],
        "matchStrings": [
            "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sARG .*?_VERSION=(?<currentValue>.*)\\s"
        ],
        "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ],

    // docker:pinDigests preset, this allows for reproducible builds
    "docker": {
      "pinDigests": true
    },

    "packageRules": [
      // Group dependency update PRs per namespace
      {
        "description": "Group dependencies",
        "matchPaths": ["dockerfiles/**"],
        "groupName": '{{{replace "dockerfiles/(.*)/.*" "$1" packageFileDir}}}',
        "groupSlug": '{{{replace "dockerfiles/(.*)/.*" "$1" packageFileDir}}}',
        "semanticCommitType": "ci",
        "prTitle": 'ci(deps): update {{{replace "dockerfiles/(.*)/.*" "$1" packageFileDir}}} dependencies',
        "commitMessagePrefix": "ci(deps):",
        "commitMessageAction": "update",
        "commitMessageExtra": "dependencies",
        "commitMessageTopic": '{{{replace "dockerfiles/(.*)/.*" "$1" packageFileDir}}}',
        "branchName": 'renovate/{{{replace "dockerfiles/(.*)/.*" "$1" packageFileDir}}}'
      }
    ]
}
